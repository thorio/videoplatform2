{
	"extends": "./node_modules/@videoplatform2/tooling-config/tsconfig.base.json",
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",

		"incremental": true,
		"baseUrl": ".",
		"outDir": "./dist",

		"paths": {
			"@prisma": [".prisma"],
		},

		"removeComments": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,

		"declaration": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
	},
}
